<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 夜间模式主题 -->
    <style name="Theme.WeightTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- Material Design 3 colors for better dark mode support -->
        <item name="colorSurface">@color/dark_gray</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/light_gray</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- 禁用所有触摸音效和系统声音 -->
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:hapticFeedbackEnabled">false</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor" tools:targetApi="21">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>
</resources> 